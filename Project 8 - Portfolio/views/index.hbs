<section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Portfolio</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
              {{#each rows}}
                <div class="col-sm-4 portfolio-item">
                    <a href="#portfolioModal{{@index}}" class="portfolio-link" data-toggle="modal">
                        <div class="caption">
                            <div class="caption-content">
                                <i class="fa fa-search-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="/images/portfolio/{{this.image}}" class="img-responsive" alt="Main image">
                    </a>
                </div>
                {{/each}}
            </div>
            
        </div>
    </section>
    {{#each rows}}
<div class="portfolio-modal modal fade" id="portfolioModal{{@index}}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <h2>{{this.title}}</h2>
                            <hr class="star-primary">
                            <img src="/images/portfolio/{{this.image}}" class="img-responsive img-centered" alt="">
                            <p>{{this.description}}</p>
                            <ul class="list-inline item-details">
                                <li>Client:
                                    <strong>{{this.client}}</strong>
                                </li>
                                <li>Date:
                                    <strong>{{this.date}}
                                    </strong>
                                </li>
                                <li>Service:
                                    <strong>{{this.service}}
                                    </strong>
                                </li>
                            </ul>
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}